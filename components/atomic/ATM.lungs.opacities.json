  "extent_modifiers": [
    {"value": "focal", "label": "Focal"},
    {"value": "multifocal", "label": "Multifocal"},
    {"value": "diffuse", "label": "Diffuse"},
    {"value": "patchy", "label": "Patchy"},
    {"value": "confluent", "label": "Confluent"}
