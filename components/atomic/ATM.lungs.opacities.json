{
  "$schema": "../schema/atomic-element.schema.json",
  "element_id": "ATM.lungs.opacities",
  "element_type": "atomic",
  "name": "Pulmonary Opacities",
  "description": "Picklist options for describing pulmonary opacities on imaging",
  
  "version": "1.0.0",
  "last_updated": "2026-01-28",
  
