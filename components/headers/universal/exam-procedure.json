{
  "$schema": "../../../schema/component-schema.json",
  "component_id": "HDR.universal.exam-procedure",
  "component_type": "header",
  "name": "Exam/Procedure",
  "description": "Universal header component for exam and procedure identification",
  
  "applies_to": ["XR", "CT", "MRI", "US", "NM", "PET", "FLUORO", "MAMMO"],
  
  "fields": [
    {
      "field_id": "exam_name",
      "label": "EXAM",
      "type": "merge_field",
      "merge_field_name": "Procedures",
      "required": true,
      "formatting": {
        "bold": true,
        "position": "inline"
      }
    },
    {
      "field_id": "facility",
      "label": "FACILITY",
      "type": "text",
      "required": false,
      "default": "INDIANA UNIVERSITY HEALTH PHYSICIANS RADIOLOGY REPORT"
    }
  ],
  
  "output_format": {
    "template": "{facility}\n\nEXAM: {exam_name}"
  },
  
  "metadata": {
    "version": "1.0.0",
    "created": "2026-01-28"
  }
}
