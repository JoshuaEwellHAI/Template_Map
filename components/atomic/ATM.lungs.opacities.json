          {
            "label": "Reticular pattern",
            "value": "reticular",
            "requires_location": true,
            "output_template": "{distribution} reticular pattern"
          },
          {
            "label": "Reticulonodular pattern",
            "value": "reticulonodular",
            "requires_location": true,
            "output_template": "{distribution} reticulonodular pattern"
