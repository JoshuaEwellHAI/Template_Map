{
  "$schema": "../../../schema/component-schema.json",
  "component_id": "HDR.universal.clinical-history",
  "component_type": "header",
  "name": "Clinical History/Indication",
  "description": "Universal header component for clinical history and indication",
  
  "applies_to": ["XR", "CT", "MRI", "US", "NM", "PET", "FLUORO", "MAMMO"],
  
  "fields": [
    {
      "field_id": "indication",
      "label": "INDICATION",
      "type": "merge_field",
      "merge_field_name": "Indication",
      "required": true,
      "formatting": {
        "label_bold": true
      }
    },
    {
      "field_id": "clinical_history",
      "label": "CLINICAL HISTORY",
      "type": "free_text",
      "required": false,
      "hint": "Relevant clinical history if different from indication"
    }
  ],
  
  "output_format": {
    "template": "INDICATION: {indication}"
  },
  
  "metadata": {
    "version": "1.0.0",
    "created": "2026-01-28"
  }
}
