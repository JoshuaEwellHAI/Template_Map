{
  "$schema": "../../../schema/component-schema.json",
  "component_id": "HDR.xray.qa-image-quality",
  "component_type": "header",
  "name": "X-Ray Image Quality Assessment",
  "description": "Quality assessment factors for radiograph interpretation",
  
  "applies_to": ["XR"],
  
  "fields": [
    {
      "field_id": "penetration",
      "label": "Penetration",
      "type": "picklist",
      "required": false,
      "options": [
        {"value": "adequate", "label": "Adequate", "is_default": true},
        {"value": "underpenetrated", "label": "Underpenetrated"},
        {"value": "overpenetrated", "label": "Overpenetrated"}
      ]
    },
    {
      "field_id": "rotation",
      "label": "Rotation",
      "type": "picklist",
      "required": false,
      "options": [
        {"value": "none", "label": "No significant rotation", "is_default": true},
        {"value": "mild_right", "label": "Mild rotation to the right"},
        {"value": "mild_left", "label": "Mild rotation to the left"},
        {"value": "moderate_right", "label": "Moderate rotation to the right"},
        {"value": "moderate_left", "label": "Moderate rotation to the left"},
        {"value": "significant", "label": "Significant rotation limiting evaluation"}
      ]
    },
    {
      "field_id": "inspiration",
      "label": "Inspiration",
      "type": "picklist",
      "required": false,
      "applies_to_regions": ["chest"],
      "options": [
        {"value": "adequate", "label": "Adequate inspiration", "is_default": true},
        {"value": "limited", "label": "Limited inspiration"},
        {"value": "poor", "label": "Poor inspiratory effort"}
      ]
    },
    {
      "field_id": "motion",
      "label": "Motion",
      "type": "picklist",
      "required": false,
      "options": [
        {"value": "none", "label": "No motion artifact", "is_default": true},
        {"value": "mild", "label": "Mild motion artifact"},
        {"value": "moderate", "label": "Moderate motion artifact, partially limiting"},
        {"value": "severe", "label": "Severe motion artifact, significantly limiting"}
      ]
    },
    {
      "field_id": "positioning",
      "label": "Positioning",
      "type": "picklist",
      "required": false,
      "options": [
        {"value": "adequate", "label": "Adequate positioning", "is_default": true},
        {"value": "suboptimal", "label": "Suboptimal positioning"},
        {"value": "limited_coverage", "label": "Limited coverage of anatomy"}
      ]
    },
    {
      "field_id": "overall_quality",
      "label": "Overall Quality",
      "type": "picklist",
      "required": false,
      "options": [
        {"value": "diagnostic", "label": "Diagnostic quality", "is_default": true},
        {"value": "limited", "label": "Limited but interpretable"},
        {"value": "nondiagnostic", "label": "Nondiagnostic"}
      ]
    }
  ],
  
  "output_templates": {
    "normal": "",
    "limited": "Study is limited by {limitation_list}.",
    "nondiagnostic": "Study is nondiagnostic due to {limitation_list}. Recommend repeat examination if clinically indicated."
  },
  
  "conditional_logic": {
    "show_quality_statement": "overall_quality != 'diagnostic'"
  },
  
  "metadata": {
    "version": "1.0.0",
    "created": "2026-01-28"
  }
}
